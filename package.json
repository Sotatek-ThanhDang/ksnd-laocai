{
  "name": "decathlon-fe",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=\"admin-portal\"",
    "dev:user": "turbo run dev --filter=\"map-fe\"",
    "storybook": "turbo run storybook --filter=\"@repo/common\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20.19"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
